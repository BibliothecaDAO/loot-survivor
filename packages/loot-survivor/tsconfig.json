{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "declaration": true,
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "moduleResolution": "node",
        "noUnusedParameters": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
    
        "esModuleInterop": true
    },
    "include": ["src/**/*.ts"],
    "skipLibCheck": true,
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
